{
  "name": "telegram-manager",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn dev:api\" \"yarn dev:web\"",
    "dev:api": "yarn workspace @telegram-manager/api dev",
    "dev:web": "yarn workspace @telegram-manager/web dev",
    "build": "yarn workspaces run build",
    "start": "yarn workspaces run start",
    "db:generate": "yarn workspace @telegram-manager/database generate",
    "db:push": "yarn workspace @telegram-manager/database db:push",
    "db:studio": "yarn workspace @telegram-manager/database studio",
    "test": "yarn workspaces run test",
    "test:api": "yarn workspace @telegram-manager/api test",
    "test:web": "yarn workspace @telegram-manager/web test",
    "test:e2e": "yarn workspace @telegram-manager/api test:e2e",
    "test:cov": "yarn workspace @telegram-manager/api test:cov",
    "lint": "yarn workspaces run lint",
    "format": "yarn workspaces run format"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11"
  }
}
