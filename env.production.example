# Produção - Exemplo de variáveis de ambiente

# Banco de Dados
DATABASE_URL="postgresql://USER:PASS@db-host:5432/telegram_manager"

# Redis
REDIS_HOST=redis-host
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT
JWT_SECRET=defina-um-segredo-forte-aqui

# Telegram
TELEGRAM_API_ID=seu_api_id
